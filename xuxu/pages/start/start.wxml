<!--pages/start/start.wxml-->
<view class='page-section'>



 <form bindsubmit="formSubmit1">
<view class='submitSection'>
  <view class="submitSentence" style="flex-direction:row;">
       <view class='section_title'>句子接龙：</view>
       <input name='inputSentence' class="weui-input" maxlength="50" placeholder="关键词'{{keyWord}}'" />
  </view>
  <view class="submitSentence" style="flex-direction:row;">
        <view class='section_title'>下一个关键词：</view>
       <input name='nextKeyWord' class="weui-input" maxlength="50" placeholder="在此输入" />
       <button formType='submit' class="button_submit"> 提交 </button>
  </view>
</view>
</form>

<view wx:for="{{sentences}}">
  {{index}}: {{item.keyWord}}
</view>

 </view>